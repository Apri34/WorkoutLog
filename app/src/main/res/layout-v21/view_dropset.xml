<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/card_view_dropset"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:elevation="@dimen/recyclerview_card_elevation"
        xmlns:tools="http://schemas.android.com/tools"
>

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:background="@drawable/background_exercise_in_routine">

                <TextView
                        android:id="@+id/text_view_exercise_number_view_dropset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_spinner_exercises"
                        android:textAlignment="center"
                        android:paddingBottom="@dimen/spinner_padding_top_bottom"
                        android:paddingTop="@dimen/spinner_padding_top_bottom"
                />

                <TextView
                        android:id="@+id/view_height_spinner_dropset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_exercise_number_view_dropset"
                        android:textSize="@dimen/text_size_spinner_exercises"
                        android:paddingBottom="@dimen/spinner_padding_top_bottom"
                        android:paddingTop="@dimen/spinner_padding_top_bottom"
                />

                <Spinner
                        android:id="@+id/spinner_exercises_view_dropset"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@id/view_height_spinner_dropset"
                        app:layout_constraintBottom_toBottomOf="@id/view_height_spinner_dropset"
                        android:background="@drawable/spinner_background"
                />

                <TextView
                        android:id="@+id/text_view_sets_view_dropset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/spinner_exercises_view_dropset"
                        android:text="@string/sets"
                        android:textColor="@color/color_exercise_in_routine_text"
                        android:textSize="@dimen/text_size_card_exercises"
                        android:layout_marginStart="@dimen/margin_side_card_exercises"
                        android:layout_marginTop="@dimen/margin_between_widgets_card_exercises"
                />

                <TextView
                        android:id="@+id/text_view_reps_view_dropset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_sets_view_dropset"
                        android:text="@string/reps"
                        android:textColor="@color/color_exercise_in_routine_text"
                        android:textSize="@dimen/text_size_card_exercises"
                        android:layout_marginStart="@dimen/margin_side_card_exercises"
                        android:layout_marginTop="@dimen/margin_between_widgets_card_exercises"
                />

                <TextView
                        android:id="@+id/text_view_drops_view_dropset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_reps_view_dropset"
                        android:text="@string/drops"
                        android:textColor="@color/color_exercise_in_routine_text"
                        android:textSize="@dimen/text_size_card_exercises"
                        android:layout_marginStart="@dimen/margin_side_card_exercises"
                        android:layout_marginTop="@dimen/margin_between_widgets_card_exercises"
                />

                <TextView
                        android:id="@+id/text_view_break_view_dropset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_view_drops_view_dropset"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/break_seconds"
                        android:textColor="@color/color_exercise_in_routine_text"
                        android:textSize="@dimen/text_size_card_exercises"
                        android:layout_marginStart="@dimen/margin_side_card_exercises"
                        android:layout_marginTop="@dimen/margin_between_widgets_card_exercises"
                        android:layout_marginBottom="@dimen/margin_between_widgets_card_exercises"
                />

                <EditText
                        android:id="@+id/edit_text_sets_view_dropset"
                        android:layout_width="@dimen/edit_text_width_exercise_in_routine"
                        android:layout_height="@dimen/edit_text_height_exercise_in_routine"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_view_sets_view_dropset"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_sets_view_dropset"
                        android:inputType="number"
                        android:background="@drawable/background_edit_text_exercise_in_routine"
                        android:textAlignment="center"
                        android:textColor="@color/color_exercise_in_routine_text"
                        android:textSize="@dimen/text_size_card_exercises"
                        android:textCursorDrawable="@drawable/black_cursor"
                        android:hint="@null"
                        tools:ignore="Autofill"
                />
                <EditText
                        android:id="@+id/edit_text_reps_view_dropset"
                        android:layout_width="@dimen/edit_text_width_exercise_in_routine"
                        android:layout_height="@dimen/edit_text_height_exercise_in_routine"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_view_reps_view_dropset"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_reps_view_dropset"
                        android:inputType="number"
                        android:background="@drawable/background_edit_text_exercise_in_routine"
                        android:textAlignment="center"
                        android:textColor="@color/color_exercise_in_routine_text"
                        android:textSize="@dimen/text_size_card_exercises"
                        android:textCursorDrawable="@drawable/black_cursor"
                        android:hint="@null"
                        tools:ignore="Autofill"
                />
                <EditText
                        android:id="@+id/edit_text_drops_view_dropset"
                        android:layout_width="@dimen/edit_text_width_exercise_in_routine"
                        android:layout_height="@dimen/edit_text_height_exercise_in_routine"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_view_drops_view_dropset"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_drops_view_dropset"
                        android:inputType="number"
                        android:background="@drawable/background_edit_text_exercise_in_routine"
                        android:textAlignment="center"
                        android:textColor="@color/color_exercise_in_routine_text"
                        android:textSize="@dimen/text_size_card_exercises"
                        android:textCursorDrawable="@drawable/black_cursor"
                        android:hint="@null"
                        tools:ignore="Autofill"
                />
                <EditText
                        android:id="@+id/edit_text_break_view_dropset"
                        android:layout_width="@dimen/edit_text_width_exercise_in_routine"
                        android:layout_height="@dimen/edit_text_height_exercise_in_routine"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_view_break_view_dropset"
                        app:layout_constraintBottom_toBottomOf="@id/text_view_break_view_dropset"
                        android:inputType="number"
                        android:background="@drawable/background_edit_text_exercise_in_routine"
                        android:textAlignment="center"
                        android:textColor="@color/color_exercise_in_routine_text"
                        android:textSize="@dimen/text_size_card_exercises"
                        android:textCursorDrawable="@drawable/black_cursor"
                        android:hint="@null"
                        tools:ignore="Autofill"
                />

                <ImageButton
                        android:id="@+id/button_finish_card_view_dropset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_colorprimary_30dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintRight_toLeftOf="@id/button_delete_card_view_dropset"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="@null"
                        android:layout_marginBottom="@dimen/margin_between_widgets_card_exercises"/>

                <ImageButton
                        android:id="@+id/button_delete_card_view_dropset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete_colorprimary_30dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="@null"
                        android:layout_marginBottom="@dimen/margin_between_widgets_card_exercises"
                        android:layout_marginEnd="@dimen/margin_side_card_exercises"/>

                <ImageButton
                        android:id="@+id/button_edit_card_view_dropset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit_colorprimary_30dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintRight_toLeftOf="@id/button_delete_card_view_dropset"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="@null"
                        android:layout_marginBottom="@dimen/margin_between_widgets_card_exercises"
                />

                <ImageView
                        android:id="@+id/image_view_drag_view_dropset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_drag_handle_colorsprimary_24dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:contentDescription="@null"
                        android:layout_marginEnd="@dimen/margin_side_card_exercises"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.WorkoutActivity"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
>

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout_workout_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="@dimen/toolbar_elevation"
            android:background="@color/colorSecondary">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_workout_activity"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:titleTextColor="@color/white"
        />

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout_workout_activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_layout_height"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabTextColor="@color/white"
                app:tabSelectedTextColor="@color/colorPrimary"
        />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_workout_activity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/app_bar_layout_workout_activity"
            app:layout_constraintBottom_toTopOf="@id/divider_bottom_section_mid_section_workout_activity"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_activity_workout"
            android:layout_width="@dimen/max_width_fields"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >

        <ImageButton
                android:id="@+id/button_prev_exc_workout_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_navigate_before_colorprimary_36dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/margin_side_workout_activity"
                android:layout_marginBottom="@dimen/margin_vertical_workout_activity_bottom_section"
                android:contentDescription="@null"
        />

        <ImageButton
                android:id="@+id/button_next_exc_workout_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_navigate_next_colorprimary_36dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/margin_side_workout_activity"
                android:layout_marginBottom="@dimen/margin_vertical_workout_activity_bottom_section"
                android:contentDescription="@null"
        />

        <ImageButton
                android:id="@+id/button_play_pause_workout_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_play_arrow_colorprimary_30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_next_exc_workout_activity"
                android:layout_marginEnd="@dimen/margin_side_workout_activity"
                android:layout_marginBottom="@dimen/margin_vertical_workout_activity_bottom_section"
                android:contentDescription="@null"
        />

        <ImageButton
                android:id="@+id/button_pause_pause_workout_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_pause_colorprimary_30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_next_exc_workout_activity"
                android:layout_marginEnd="@dimen/margin_side_workout_activity"
                android:layout_marginBottom="@dimen/margin_vertical_workout_activity_bottom_section"
                android:visibility="invisible"
                android:contentDescription="@null"
        />

        <ImageButton
                android:id="@+id/button_plus_pause_workout_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_add_colorprimary_30dp"
                app:layout_constraintRight_toLeftOf="@id/button_play_pause_workout_activity"
                app:layout_constraintBottom_toTopOf="@id/button_next_exc_workout_activity"
                android:layout_marginEnd="@dimen/margin_side_workout_activity"
                android:layout_marginBottom="@dimen/margin_vertical_workout_activity_bottom_section"
                android:contentDescription="@null"
        />

        <ImageButton
                android:id="@+id/button_reset_pause_workout_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_replay_colorprimary_30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_next_exc_workout_activity"
                android:layout_marginStart="@dimen/margin_side_workout_activity"
                android:layout_marginBottom="@dimen/margin_vertical_workout_activity_bottom_section"
                android:contentDescription="@null"
        />

        <ImageButton
                android:id="@+id/button_minus_pause_workout_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_remove_colorprimary_30dp"
                app:layout_constraintLeft_toRightOf="@id/button_reset_pause_workout_activity"
                app:layout_constraintBottom_toTopOf="@id/button_next_exc_workout_activity"
                android:layout_marginStart="@dimen/margin_side_workout_activity"
                android:layout_marginBottom="@dimen/margin_vertical_workout_activity_bottom_section"
                android:contentDescription="@null"
        />

        <TextView
                android:id="@+id/text_view_timer_workout_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                app:layout_constraintLeft_toRightOf="@id/button_minus_pause_workout_activity"
                app:layout_constraintRight_toLeftOf="@id/button_plus_pause_workout_activity"
                app:layout_constraintTop_toTopOf="@id/button_plus_pause_workout_activity"
                app:layout_constraintBottom_toBottomOf="@id/button_plus_pause_workout_activity"
                android:textSize="@dimen/text_size_workout_activity"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <View
            android:id="@+id/divider_bottom_section_mid_section_workout_activity"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@id/constraint_layout_activity_workout"
            android:layout_marginBottom="@dimen/margin_vertical_workout_activity_bottom_section"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
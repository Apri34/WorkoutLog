<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <TextView
            android:id="@+id/text_view_home_fragment_workout_of_today"
            android:layout_width="@dimen/max_width_fields"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_home_fragment_big"
            android:layout_marginTop="@dimen/margin_home_fragment_top"
            android:text="@string/workout_of_today"
            android:gravity="center_horizontal"
    />

    <TextView
            android:id="@+id/text_view_trainingplan_home_fragment_workout_not_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/divider_home_fragment_workout_not_finished"
            app:layout_constraintTop_toBottomOf="@+id/text_view_home_fragment_workout_of_today"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_home_fragment_big"
            android:layout_marginTop="@dimen/margin_home_fragment_top"
    />

    <ImageButton
            android:id="@+id/button_edit_trainingplan_home_fragment_workout_not_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/divider_home_fragment_workout_not_finished"
            app:layout_constraintTop_toTopOf="@id/text_view_trainingplan_home_fragment_workout_not_finished"
            app:layout_constraintBottom_toBottomOf="@id/text_view_trainingplan_home_fragment_workout_not_finished"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit_colorprimary_24dp"
            android:contentDescription="@null"
    />

    <TextView
            android:id="@+id/text_view_routine_home_fragment_workout_not_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/divider_home_fragment_workout_not_finished"
            app:layout_constraintTop_toBottomOf="@id/text_view_trainingplan_home_fragment_workout_not_finished"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_home_fragment_big"
            android:layout_marginTop="4dp"
    />

    <ImageButton
            android:id="@+id/button_edit_routine_home_fragment_workout_not_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/divider_home_fragment_workout_not_finished"
            app:layout_constraintTop_toTopOf="@id/text_view_routine_home_fragment_workout_not_finished"
            app:layout_constraintBottom_toBottomOf="@id/text_view_routine_home_fragment_workout_not_finished"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit_colorprimary_24dp"
            android:contentDescription="@null"
    />

    <View
            android:id="@+id/divider_home_fragment_workout_not_finished"
            android:layout_width="@dimen/max_width_fields"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/text_view_routine_home_fragment_workout_not_finished"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_fragment_home_workout_not_finished"
            android:layout_width="@dimen/max_width_fields"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/divider_home_fragment_workout_not_finished"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_home_fragment_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

    />

</androidx.constraintlayout.widget.ConstraintLayout>
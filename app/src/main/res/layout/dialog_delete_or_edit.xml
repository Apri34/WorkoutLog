<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="10dp"
              android:paddingStart="10dp"
              android:paddingRight="10dp"
              android:paddingEnd="10dp"
              android:paddingTop="10dp"
>

    <TextView
            android:id="@+id/button_delete_delete_or_edit_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_delete_colorsecondary_24dp"
            android:drawableStart="@drawable/ic_delete_colorsecondary_24dp"
            android:drawablePadding="8dp"
            android:text="@string/delete"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:background="@drawable/background_recyclerview_item"
            android:paddingTop="2sp"
            android:paddingBottom="2dp"
    />
    <TextView
            android:id="@+id/button_edit_delete_or_edit_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_edit_colorsecondary_24dp"
            android:drawableStart="@drawable/ic_edit_colorsecondary_24dp"
            android:drawablePadding="8dp"
            android:text="@string/edit"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:background="@drawable/background_recyclerview_item"
            android:paddingTop="2sp"
            android:paddingBottom="2dp"
    />

</LinearLayout>
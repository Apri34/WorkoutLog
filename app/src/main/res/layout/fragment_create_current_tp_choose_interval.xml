<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:layout_marginTop="@dimen/margin_vertical_choose_interval_for_bigger_screens"
              android:layout_marginBottom="@dimen/margin_vertical_choose_interval_for_bigger_screens"
              android:layout_marginLeft="@dimen/margin_horizontal_choose_interval_for_bigger_screens"
              android:layout_marginStart="@dimen/margin_horizontal_choose_interval_for_bigger_screens"
              android:layout_marginRight="@dimen/margin_horizontal_choose_interval_for_bigger_screens"
              android:layout_marginEnd="@dimen/margin_horizontal_choose_interval_for_bigger_screens"
>

    <com.workoutlog.workoutlog.views.IntervalPicker
            android:id="@+id/interval_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:textSizeItemsIP="@dimen/text_size_items_interval"
            app:textSizeTopIP="@dimen/text_size_top_interval"
    />

    <com.workoutlog.workoutlog.views.CustomIntervalCreator
            android:id="@+id/custom_interval_creator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:textSizeItemsCIC="@dimen/text_size_items_interval"
            app:textSizeTopCIC="@dimen/text_size_top_interval"
    />

</LinearLayout>
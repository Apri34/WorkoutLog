<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants"
>

    <TextView
            android:id="@+id/text_view_deload_fragment_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/edit_text_deload_fragment_cycles"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_deload_fragment_cycles"
            android:text="@string/deload_after"
            android:textStyle="bold"
            android:textColor="@color/colorSecondary"
    />
    <TextView
            android:id="@+id/text_view_deload_fragment_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/edit_text_deload_fragment_volume"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_deload_fragment_volume"
            android:text="@string/volume"
            android:textStyle="bold"
            android:textColor="@color/colorSecondary"
    />
    <TextView
            android:id="@+id/text_view_deload_fragment_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/edit_text_deload_fragment_weight"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_deload_fragment_weight"
            android:text="@string/weight"
            android:textStyle="bold"
            android:textColor="@color/colorSecondary"
    />
    <TextView
            android:id="@+id/text_view_deload_fragment_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/text_view_deload_fragment_1"
            app:layout_constraintLeft_toRightOf="@id/button_deload_fragment_cycles_down"
            android:layout_marginLeft="@dimen/margin_widgets_side_deload_fragment"
            android:layout_marginStart="@dimen/margin_widgets_side_deload_fragment"
            android:text="@string/cycles"
            android:textStyle="bold"
            android:textColor="@color/colorSecondary"
    />

    <EditText
            android:id="@+id/edit_text_deload_fragment_cycles"
            android:layout_width="@dimen/width_edit_text_deload_fragment"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/text_view_deload_fragment_1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/margin_widgets_side_deload_fragment"
            android:layout_marginStart="@dimen/margin_widgets_side_deload_fragment"
            android:textColor="@color/colorPrimary"
            android:textCursorDrawable="@drawable/black_cursor"
            android:background="@drawable/background_edit_text_deload"
            android:inputType="number"
            android:text="@string/default_cycles_deload"
            android:textAlignment="center"
            tools:ignore="RtlSymmetry,Autofill"
            android:hint="@null"
    />
    <EditText
            android:id="@+id/edit_text_deload_fragment_volume"
            android:layout_width="@dimen/width_edit_text_deload_fragment"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/edit_text_deload_fragment_cycles"
            app:layout_constraintTop_toBottomOf="@id/edit_text_deload_fragment_cycles"
            android:layout_marginTop="@dimen/margin_between_widgets_top_deload_fragment"
            android:textCursorDrawable="@drawable/black_cursor"
            android:background="@drawable/background_edit_text_deload"
            android:textColor="@color/colorPrimary"
            android:inputType="number"
            android:text="@string/default_weight_deload"
            android:textAlignment="center"
            tools:ignore="RtlSymmetry,Autofill"
            android:hint="@null"
    />
    <EditText
            android:id="@+id/edit_text_deload_fragment_weight"
            android:layout_width="@dimen/width_edit_text_deload_fragment"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/edit_text_deload_fragment_cycles"
            app:layout_constraintTop_toBottomOf="@id/edit_text_deload_fragment_volume"
            android:layout_marginTop="@dimen/margin_between_widgets_top_deload_fragment"
            android:textCursorDrawable="@drawable/black_cursor"
            android:background="@drawable/background_edit_text_deload"
            android:textColor="@color/colorPrimary"
            android:inputType="number"
            android:text="@string/default_volume_deload"
            android:textAlignment="center"
            tools:ignore="RtlSymmetry,Autofill"
            android:hint="@null"
    />
    <ImageButton
            android:id="@+id/button_deload_fragment_cycles_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_round"
            app:layout_constraintTop_toTopOf="@id/edit_text_deload_fragment_cycles"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_deload_fragment_cycles"
            app:layout_constraintLeft_toRightOf="@id/edit_text_deload_fragment_cycles"
            android:src="@drawable/ic_keyboard_arrow_up_white_24dp"
            android:layout_marginLeft="@dimen/margin_widgets_side_deload_fragment"
            android:layout_marginStart="@dimen/margin_widgets_side_deload_fragment"
            android:contentDescription="@null"
    />
    <ImageButton
            android:id="@+id/button_deload_fragment_cycles_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_round"
            app:layout_constraintTop_toTopOf="@id/edit_text_deload_fragment_cycles"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_deload_fragment_cycles"
            app:layout_constraintLeft_toRightOf="@id/button_deload_fragment_cycles_up"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:layout_marginLeft="@dimen/margin_buttons_up_down_deload_fragment"
            android:layout_marginStart="@dimen/margin_buttons_up_down_deload_fragment"
            android:contentDescription="@null"
    />
    <ImageButton
            android:id="@+id/button_deload_fragment_volume_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_round"
            android:src="@drawable/ic_keyboard_arrow_up_white_24dp"
            app:layout_constraintTop_toTopOf="@id/edit_text_deload_fragment_volume"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_deload_fragment_volume"
            app:layout_constraintLeft_toRightOf="@id/edit_text_deload_fragment_volume"
            android:layout_marginLeft="@dimen/margin_widgets_side_deload_fragment"
            android:layout_marginStart="@dimen/margin_widgets_side_deload_fragment"
            android:contentDescription="@null"
    />
    <ImageButton
            android:id="@+id/button_deload_fragment_volume_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_round"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            app:layout_constraintTop_toTopOf="@id/edit_text_deload_fragment_volume"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_deload_fragment_volume"
            app:layout_constraintLeft_toRightOf="@id/button_deload_fragment_volume_up"
            android:layout_marginLeft="@dimen/margin_buttons_up_down_deload_fragment"
            android:layout_marginStart="@dimen/margin_buttons_up_down_deload_fragment"
            android:contentDescription="@null"
    />
    <ImageButton
            android:id="@+id/button_deload_fragment_weight_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_round"
            android:src="@drawable/ic_keyboard_arrow_up_white_24dp"
            app:layout_constraintTop_toTopOf="@id/edit_text_deload_fragment_weight"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_deload_fragment_weight"
            app:layout_constraintLeft_toRightOf="@id/edit_text_deload_fragment_weight"
            android:layout_marginLeft="@dimen/margin_widgets_side_deload_fragment"
            android:layout_marginStart="@dimen/margin_widgets_side_deload_fragment"
            android:contentDescription="@null"
    />
    <ImageButton
            android:id="@+id/button_deload_fragment_weight_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_round"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            app:layout_constraintTop_toTopOf="@id/edit_text_deload_fragment_weight"
            app:layout_constraintBottom_toBottomOf="@id/edit_text_deload_fragment_weight"
            app:layout_constraintLeft_toRightOf="@id/button_deload_fragment_weight_up"
            android:layout_marginLeft="@dimen/margin_buttons_up_down_deload_fragment"
            android:layout_marginStart="@dimen/margin_buttons_up_down_deload_fragment"
            android:contentDescription="@null"
    />

    <Button
            android:id="@+id/button_no_deload_deload_fragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            app:layout_constraintTop_toBottomOf="@id/edit_text_deload_fragment_weight"
            android:layout_marginTop="@dimen/margin_create_current_tp_button"
            android:text="@string/no_deload"
            android:background="@drawable/background_button"
            android:textColor="@color/white"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
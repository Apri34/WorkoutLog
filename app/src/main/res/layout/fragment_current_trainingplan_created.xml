<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding_create_current_tp_tp_created_side"
        android:paddingStart="@dimen/padding_create_current_tp_tp_created_side"
        android:paddingRight="@dimen/padding_create_current_tp_tp_created_side"
        android:paddingEnd="@dimen/padding_create_current_tp_tp_created_side"
>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_between_parts_current_trainingplan"
            android:layout_marginBottom="@dimen/margin_between_parts_current_trainingplan"
            android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/text_view_current_trainingplan_tp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trainingplan"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_create_current_tp_created_headers"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
            />

            <View
                    android:id="@+id/line_current_trainingplan_trainingplan"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_current_trainingplan_tp"
                    android:layout_marginLeft="@dimen/margin_side_current_trainingplan"
                    android:layout_marginStart="@dimen/margin_side_current_trainingplan"
                    android:layout_marginRight="@dimen/margin_side_current_trainingplan"
                    android:layout_marginEnd="@dimen/margin_side_current_trainingplan"
                    android:layout_marginTop="@dimen/margin_lines_current_trainingplan"
            />

            <TextView
                    android:id="@+id/text_view_current_trainingplan_trainingplan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_create_current_tp_created_items"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line_current_trainingplan_trainingplan"
                    android:layout_marginTop="@dimen/margin_lines_current_trainingplan"
            />

            <ImageButton
                    android:id="@+id/image_button_edit_trainingplan_current_trainingplan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/text_view_current_trainingplan_tp"
                    app:layout_constraintBottom_toBottomOf="@id/text_view_current_trainingplan_tp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_edit_colorprimary_24dp"
                    android:contentDescription="@null"
            />


            <TextView
                    android:id="@+id/text_view_current_trainingplan_int"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/interval"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_create_current_tp_created_headers"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_current_trainingplan_trainingplan"
                    android:layout_marginTop="@dimen/margin_between_parts_current_trainingplan"
            />

            <View
                    android:id="@+id/line_current_trainingplan_interval"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_current_trainingplan_int"
                    android:layout_marginLeft="@dimen/margin_side_current_trainingplan"
                    android:layout_marginStart="@dimen/margin_side_current_trainingplan"
                    android:layout_marginRight="@dimen/margin_side_current_trainingplan"
                    android:layout_marginEnd="@dimen/margin_side_current_trainingplan"
                    android:layout_marginTop="@dimen/margin_lines_current_trainingplan"
            />

            <LinearLayout
                    android:id="@+id/linear_layout_current_trainingplan_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line_current_trainingplan_interval"
                    android:gravity="center_horizontal"
            />

            <ImageButton
                    android:id="@+id/image_button_edit_interval_current_trainingplan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/text_view_current_trainingplan_int"
                    app:layout_constraintBottom_toBottomOf="@id/text_view_current_trainingplan_int"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_edit_colorprimary_24dp"
                    android:contentDescription="@null"
            />



            <TextView
                    android:id="@+id/text_view_current_trainingplan_cal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workout_calender"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_create_current_tp_created_headers"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear_layout_current_trainingplan_interval"
                    android:layout_marginTop="@dimen/margin_between_parts_current_trainingplan"
            />

            <View
                    android:id="@+id/line_current_trainingplan_calender"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_current_trainingplan_cal"
                    android:layout_marginLeft="@dimen/margin_side_current_trainingplan"
                    android:layout_marginStart="@dimen/margin_side_current_trainingplan"
                    android:layout_marginRight="@dimen/margin_side_current_trainingplan"
                    android:layout_marginEnd="@dimen/margin_side_current_trainingplan"
                    android:layout_marginTop="@dimen/margin_lines_current_trainingplan"
            />

            <com.workoutlog.workoutlog.views.Calender
                    android:id="@+id/calender_current_trainingplan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/line_current_trainingplan_calender"
                    android:layout_marginTop="@dimen/margin_lines_current_trainingplan"
                    app:isEditable="false"
            />

            <ImageButton
                    android:id="@+id/image_button_edit_interval_current_calender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/text_view_current_trainingplan_cal"
                    app:layout_constraintBottom_toBottomOf="@id/text_view_current_trainingplan_cal"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_edit_colorprimary_24dp"
                    android:contentDescription="@null"
            />

            <TextView
                    android:id="@+id/text_view_current_trainingplan_deload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deload"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_create_current_tp_created_headers"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/calender_current_trainingplan"
                    android:layout_marginTop="@dimen/margin_between_parts_current_trainingplan"
            />

            <View
                    android:id="@+id/line_current_trainingplan_deload"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_current_trainingplan_deload"
                    android:layout_marginLeft="@dimen/margin_side_current_trainingplan"
                    android:layout_marginStart="@dimen/margin_side_current_trainingplan"
                    android:layout_marginRight="@dimen/margin_side_current_trainingplan"
                    android:layout_marginEnd="@dimen/margin_side_current_trainingplan"
                    android:layout_marginTop="@dimen/margin_lines_current_trainingplan"
            />

            <ImageButton
                    android:id="@+id/image_button_edit_interval_current_deload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/text_view_current_trainingplan_deload"
                    app:layout_constraintBottom_toBottomOf="@id/text_view_current_trainingplan_deload"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_edit_colorprimary_24dp"
                    android:contentDescription="@null"
            />

            <TextView
                    android:id="@+id/text_view_current_trainingplan_deload_cycles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_create_current_tp_created_items"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line_current_trainingplan_deload"
                    android:layout_marginTop="@dimen/margin_lines_current_trainingplan"
            />

            <TextView
                    android:id="@+id/text_view_current_trainingplan_deload_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_create_current_tp_created_items"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_current_trainingplan_deload_cycles"
                    android:layout_marginTop="@dimen/margin_lines_current_trainingplan"
            />

            <TextView
                    android:id="@+id/text_view_current_trainingplan_deload_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_create_current_tp_created_items"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_view_current_trainingplan_deload_volume"
                    android:layout_marginTop="@dimen/margin_lines_current_trainingplan"
            />

            <Button
                    android:id="@+id/button_create_new_current_trainingplan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/create_new_current_trainingplan"
                    android:textColor="@color/white"
                    android:background="@drawable/background_button"
                    app:layout_constraintTop_toBottomOf="@id/text_view_current_trainingplan_deload_weight"
                    android:layout_marginTop="@dimen/margin_between_parts_current_trainingplan"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:background="@android:color/transparent"
>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/stats_section_dropset_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical_text_view_set_exercises_fragments"
                android:layout_gravity="center_horizontal"
        >
            <TextView
                    android:id="@+id/text_view_set_fragment_dropset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/text_size_set_exercise_fragments"
            />

            <LinearLayout
                    android:id="@+id/linear_layout_text_views_stats_section_dropset"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/edit_text_reps_fragment_dropset"
                    app:layout_constraintBottom_toBottomOf="@id/edit_text_weight_fragment_dropset"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="vertical"
            >
                <TextView
                        android:id="@+id/text_view_reps_fragment_dropset"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="@string/reps"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_stats_section_exercise_fragments"
                        android:layout_weight="1"
                />

                <TextView
                        android:id="@+id/text_view_weight_fragment_dropset"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="@string/weight"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_stats_section_exercise_fragments"
                        android:layout_weight="1"
                />

            </LinearLayout>


            <EditText
                    android:id="@+id/edit_text_reps_fragment_dropset"
                    android:layout_width="@dimen/width_edit_text_deload_fragment"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/linear_layout_text_views_stats_section_dropset"
                    app:layout_constraintTop_toBottomOf="@id/text_view_set_fragment_dropset"
                    android:layout_marginLeft="@dimen/margin_side_workout_activity"
                    android:layout_marginStart="@dimen/margin_side_workout_activity"
                    android:layout_marginTop="@dimen/margin_vertical_text_view_set_exercises_fragments"
                    android:textColor="@color/colorPrimary"
                    android:textCursorDrawable="@drawable/black_cursor"
                    android:background="@drawable/background_edit_text_deload"
                    android:inputType="number"
                    android:textAlignment="center"
                    tools:ignore="Autofill"
                    android:hint="@null"
            />

            <EditText
                    android:id="@+id/edit_text_weight_fragment_dropset"
                    android:layout_width="@dimen/width_edit_text_deload_fragment"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/linear_layout_text_views_stats_section_dropset"
                    app:layout_constraintTop_toBottomOf="@id/edit_text_reps_fragment_dropset"
                    android:layout_marginLeft="@dimen/margin_side_workout_activity"
                    android:layout_marginStart="@dimen/margin_side_workout_activity"
                    android:layout_marginTop="@dimen/margin_between_widgets_top_deload_fragment"
                    android:textColor="@color/colorPrimary"
                    android:textCursorDrawable="@drawable/black_cursor"
                    android:background="@drawable/background_edit_text_deload"
                    android:inputType="number"
                    android:textAlignment="center"
                    tools:ignore="Autofill"
                    android:hint="@null"
            />

            <ImageButton
                    android:id="@+id/button_reps_up_dropset_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_round"
                    app:layout_constraintTop_toTopOf="@id/edit_text_reps_fragment_dropset"
                    app:layout_constraintBottom_toBottomOf="@id/edit_text_reps_fragment_dropset"
                    app:layout_constraintLeft_toRightOf="@id/edit_text_reps_fragment_dropset"
                    android:src="@drawable/ic_keyboard_arrow_up_white_24dp"
                    android:layout_marginLeft="@dimen/margin_widgets_side_deload_fragment"
                    android:layout_marginStart="@dimen/margin_widgets_side_deload_fragment"
                    android:contentDescription="@null"
            />
            <ImageButton
                    android:id="@+id/button_reps_down_dropset_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_round"
                    app:layout_constraintTop_toTopOf="@id/edit_text_reps_fragment_dropset"
                    app:layout_constraintBottom_toBottomOf="@id/edit_text_reps_fragment_dropset"
                    app:layout_constraintLeft_toRightOf="@id/button_reps_up_dropset_fragment"
                    android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
                    android:layout_marginLeft="@dimen/margin_buttons_up_down_deload_fragment"
                    android:layout_marginStart="@dimen/margin_buttons_up_down_deload_fragment"
                    android:contentDescription="@null"
            />
            <ImageButton
                    android:id="@+id/button_weight_up_dropset_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_round"
                    android:src="@drawable/ic_keyboard_arrow_up_white_24dp"
                    app:layout_constraintTop_toTopOf="@id/edit_text_weight_fragment_dropset"
                    app:layout_constraintBottom_toBottomOf="@id/edit_text_weight_fragment_dropset"
                    app:layout_constraintLeft_toRightOf="@id/edit_text_weight_fragment_dropset"
                    android:layout_marginLeft="@dimen/margin_widgets_side_deload_fragment"
                    android:layout_marginStart="@dimen/margin_widgets_side_deload_fragment"
                    android:contentDescription="@null"
            />
            <ImageButton
                    android:id="@+id/button_weight_down_dropset_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_round"
                    android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
                    app:layout_constraintTop_toTopOf="@id/edit_text_weight_fragment_dropset"
                    app:layout_constraintBottom_toBottomOf="@id/edit_text_weight_fragment_dropset"
                    app:layout_constraintLeft_toRightOf="@id/button_weight_up_dropset_fragment"
                    android:layout_marginLeft="@dimen/margin_buttons_up_down_deload_fragment"
                    android:layout_marginStart="@dimen/margin_buttons_up_down_deload_fragment"
                    android:contentDescription="@null"
            />

            <ImageButton
                    android:id="@+id/button_add_set_dropset_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_round"
                    android:src="@drawable/ic_add_white_30dp"
                    app:layout_constraintTop_toBottomOf="@id/edit_text_weight_fragment_dropset"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/margin_vertical_text_view_set_exercises_fragments"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginBottom="@dimen/margin_vertical_text_view_set_exercises_fragments"
                    android:paddingLeft="@dimen/padding_button_round_smaller_vector"
                    android:paddingStart="@dimen/padding_button_round_smaller_vector"
                    android:paddingRight="@dimen/padding_button_round_smaller_vector"
                    android:paddingEnd="@dimen/padding_button_round_smaller_vector"
                    android:paddingTop="@dimen/padding_button_round_smaller_vector"
                    android:paddingBottom="@dimen/padding_button_round_smaller_vector"
                    android:contentDescription="@null"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



    <ImageButton
            android:id="@+id/button_finish_exercise_dropset_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/margin_side_workout_activity"
            android:layout_marginRight="@dimen/margin_side_workout_activity"
            android:layout_marginEnd="@dimen/margin_side_workout_activity"
            android:src="@drawable/ic_check_white_30dp"
            android:paddingLeft="@dimen/padding_button_round_smaller_vector"
            android:paddingStart="@dimen/padding_button_round_smaller_vector"
            android:paddingRight="@dimen/padding_button_round_smaller_vector"
            android:paddingEnd="@dimen/padding_button_round_smaller_vector"
            android:paddingTop="@dimen/padding_button_round_smaller_vector"
            android:paddingBottom="@dimen/padding_button_round_smaller_vector"
            android:contentDescription="@null"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
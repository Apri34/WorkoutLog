<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/constraint_layout_login_fragment_login_section"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_app_name_login_register_screen"
            android:textStyle="bold"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_login_fragment_login_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingRight="@dimen/padding_login_register_screen_left_right"
            android:paddingLeft="@dimen/padding_login_register_screen_left_right"
    >

        <TextView
                android:id="@+id/textview_login_fragment_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/Login"
                android:textSize="@dimen/text_size_login_register_login_register"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
        />

        <com.workoutlog.workoutlog.views.CustomEditText
                android:id="@+id/edittext_fragment_login_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textfield_height_login_register"
                app:hint="@string/email"
                app:layout_constraintTop_toBottomOf="@+id/textview_login_fragment_login"
                android:layout_marginTop="@dimen/margin_between_fields_login_register_section_custom_edit_text"
                app:hintSize="@dimen/hint_size_login_register"
                app:customBackground="@drawable/background_edittext_login_register"
                app:textColor="@color/colorSecondary"
        />

        <com.workoutlog.workoutlog.views.CustomEditText
                android:id="@+id/edittext_fragment_login_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textfield_height_login_register"
                app:hint="@string/password"
                app:layout_constraintTop_toBottomOf="@+id/edittext_fragment_login_email"
                android:layout_marginTop="@dimen/margin_between_fields_login_register_section_custom_edit_text"
                app:customBackground="@drawable/background_edittext_login_register"
                app:hintSize="@dimen/hint_size_login_register"
                app:isPassword="true"
                app:textColor="@color/colorSecondary"
        />

        <CheckBox
                android:id="@+id/checkbox_fragment_login_stay_logged_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/edittext_fragment_login_password"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/remember_me"
                android:layout_marginTop="@dimen/margin_between_fields_login_register_section_custom_edit_text"
                android:textColor="@color/colorPrimary"
                android:button="@drawable/checkbox_background"
                android:paddingLeft="12dp"
                android:paddingStart="12dp"
                tools:ignore="RtlSymmetry"
                android:background="@android:color/transparent"
        />

        <Button
                android:id="@+id/button_fragment_login_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="@string/log_in"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/checkbox_fragment_login_stay_logged_in"
                android:layout_marginTop="@dimen/margin_between_fields_login_register_section"
                android:background="@drawable/background_button"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/constraint_layout_login_fragment_login_section"
            app:layout_constraintBottom_toBottomOf="parent"
    >

        <TextView
                android:id="@+id/textview_fragment_login_continue_as_guest"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textview_height_fragment_login_bottom_section"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_login_fragment_or"
                android:layout_marginTop="@dimen/margin_between_register_and_continue_as_guest"
                android:text="@string/continue_as_guest"
                android:textColor="@color/color_textviewbutton_login_fragment"
                android:paddingLeft="@dimen/padding_textview_fragment_login_bottom_section"
                android:paddingRight="@dimen/padding_textview_fragment_login_bottom_section"
        />

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/textview_login_fragment_or"
                app:layout_constraintBottom_toBottomOf="@id/textview_login_fragment_or"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/textview_login_fragment_or"
                android:layout_marginLeft="@dimen/padding_login_register_screen_left_right"
                android:layout_marginStart="@dimen/padding_login_register_screen_left_right"
                android:layout_marginRight="@dimen/padding_login_register_screen_left_right"
                android:layout_marginEnd="@dimen/padding_login_register_screen_left_right"
        />

        <TextView
                android:id="@+id/textview_login_fragment_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textview_fragment_login_register"
                app:layout_constraintBottom_toTopOf="@id/textview_login_fragment_or"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/colorPrimary"
                android:text="@string/or"
        />

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/textview_login_fragment_or"
                app:layout_constraintBottom_toBottomOf="@id/textview_login_fragment_or"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/textview_login_fragment_or"
                android:layout_marginLeft="@dimen/padding_login_register_screen_left_right"
                android:layout_marginStart="@dimen/padding_login_register_screen_left_right"
                android:layout_marginRight="@dimen/padding_login_register_screen_left_right"
                android:layout_marginEnd="@dimen/padding_login_register_screen_left_right"
        />

        <TextView
                android:id="@+id/textview_fragment_login_register"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textview_height_fragment_login_bottom_section"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textview_login_fragment_or"
                android:layout_marginBottom="@dimen/margin_between_register_and_continue_as_guest"
                android:text="@string/no_account_yet_register_now"
                android:textColor="@color/color_textviewbutton_login_fragment"
                android:paddingLeft="@dimen/padding_textview_fragment_login_bottom_section"
                android:paddingRight="@dimen/padding_textview_fragment_login_bottom_section"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>